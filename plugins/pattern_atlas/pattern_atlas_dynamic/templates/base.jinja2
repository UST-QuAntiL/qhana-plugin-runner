<!DOCTYPE html>
<html>
<head>
    {%- block head -%}
    <script defer src="/static/microfrontend.js"></script><script src="./workarounds.js"></script>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" type="text/css" href="/styles.css" media="screen" />
    <link rel="stylesheet" type="text/css" href="{{'https://cdn.jsdelivr.net/npm/modern-normalize@3.0.1/modern-normalize.css' | resource}}" media="screen" />
    {%- endblock head -%}
</head>

<body>
    {%- block titlebar -%}
    {%- if is_planqk -%}
    {% include 'titlebar-planqk.jinja2' %}
    {%- else -%}
    <div class="titlebar">
        <a class="home" href="/">Pattern Atlas</a>
    </div>
    {%- endif -%}
    {%- endblock titlebar -%}

    {%- block content -%}
    {%- endblock content -%}

    {%- block script -%}
    {%- endblock script -%}
</body>

</html>
